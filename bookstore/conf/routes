# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Create
GET     /create                     controllers.Application.create()
POST    /create                     controllers.Application.newBook()

# Edit
GET     /editList                   controllers.Application.editList()
GET     /edit                       controllers.Application.edit()
POST    /edit                       controllers.Application.update()

# Delete
GET     /delete                     controllers.Application.deleteBook()
POST    /deleteBook                 controllers.Application.removeNow()

# Login
GET     /login                      controllers.StudentManager.login()
POST    /login                      controllers.StudentManager.authenticate()
GET     /logout                     controllers.StudentManager.logout()

# Borrow
GET    /borrow                      controllers.RentalManager.borrow()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
